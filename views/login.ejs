    } catch (error) {
        console.error('‚ùå Login error:', error);

        let errorMsg = 'Login failed. Please try again.';
        
        if (error.message.includes('Invalid login credentials')) {
            errorMsg = '‚ùå Invalid email or password!\n\nüí° Tip: If you don\'t have an account, please click "Register here" below to create one.';
        } else if (error.message.includes('Email not confirmed')) {
            errorMsg = '‚ö†Ô∏è Please confirm your email first!\n\nCheck your inbox for the confirmation link.';
        } else if (error.message.includes('Too many requests')) {
            errorMsg = '‚è≥ Too many login attempts. Please try again later.';
        } else if (error.message.includes('session')) {
            errorMsg = '‚ùå Failed to create login session.\n\nPlease try again or clear your browser cache.';
