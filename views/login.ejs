document.getElementById('loginForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value;
    const rememberMe = document.getElementById('remember').checked;
    const loginBtn = document.querySelector('.login-btn');

    errorMessage.classList.remove('show');
    successMessage.classList.remove('show');
    loginBtn.textContent = 'Logging in...';
    loginBtn.disabled = true;

    try {
        console.log('üîê Attempting login for:', email);

        // Sign in with Supabase Auth
        const { data: authData, error: authError } = await supabase.auth.signInWithPassword({
            email: email,
            password: password
        });

        if (authError) {
            console.error('Auth error:', authError);
            throw authError;
        }

        console.log('‚úÖ Auth successful, user ID:', authData.user.id);

        // IMPORTANT: Wait a bit for session to be properly established
        await new Promise(resolve => setTimeout(resolve, 500));

        // Check if user is TEACHER
        const { data: teacherData, error: teacherError } = await supabase
            .from('teachers')
            .select('*')
            .eq('user_id', authData.user.id)
            .single();

        if (teacherError && teacherError.code !== 'PGRST116') {
            console.error('Teacher query error:', teacherError);
        }

        if (!teacherData) {
            throw new Error('TEACHER_NOT_FOUND');
        }

        console.log('üë®‚Äçüè´ Teacher found:', teacherData.name);
        
        // Store session and user data
        // CRITICAL: Store these in the correct order
        localStorage.setItem('userRole', 'teacher');
        localStorage.setItem('teacherName', teacherData.name);
        localStorage.setItem('teacherId', teacherData.id);
        localStorage.setItem('teacherEmail', email);
        localStorage.setItem('staffId', teacherData.staff_id);
        localStorage.setItem('userId', authData.user.id);
        localStorage.setItem('access_token', authData.session.access_token);
        localStorage.setItem('refresh_token', authData.session.refresh_token);
        
        if (rememberMe) {
            localStorage.setItem('rememberEmail', email);
        } else {
            localStorage.removeItem('rememberEmail');
        }

        // CRITICAL: Set the session in Supabase's own storage
        await supabase.auth.setSession({
            access_token: authData.session.access_token,
            refresh_token: authData.session.refresh_token
        });

        console.log('‚úÖ Session established successfully');

        showSuccess('‚úÖ Login successful! Redirecting to dashboard...');
        
        // Wait a bit before redirect to ensure session is fully saved
        setTimeout(() => {
            window.location.href = '/dashboard';
        }, 1500);

    } catch (error) {
        console.error('‚ùå Login error:', error);

        let errorMsg = '‚ùå Login failed. Please try again.';
        
        if (error.message === 'TEACHER_NOT_FOUND') {
            errorMsg = '‚ùå Teacher account not found!\n\nThis email is registered but not linked to a teacher account.\nPlease contact administrator.';
        } else if (error.message.includes('Invalid login credentials')) {
            errorMsg = '‚ùå Invalid email or password!\n\nüí° Make sure:\n‚Ä¢ Email is correct\n‚Ä¢ Password is correct';
        } else if (error.message.includes('Too many requests')) {
            errorMsg = '‚è≥ Too many login attempts.\n\nPlease try again in a few minutes.';
        } else if (error.message) {
            errorMsg = '‚ùå ' + error.message;
        }

        showError(errorMsg);

    } finally {
        loginBtn.textContent = 'Login';
        loginBtn.disabled = false;
    }
});

