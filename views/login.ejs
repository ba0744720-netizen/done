    const rememberedEmail = localStorage.getItem('rememberEmail');
    if (rememberedEmail) {
        document.getElementById('email').value = rememberedEmail;
        document.getElementById('remember').checked = true;
    }

    // Check if user already has a valid session
    try {
        const session = localStorage.getItem('supabase_session');
        const lastLogin = localStorage.getItem('lastLogin');
        
        if (session && lastLogin) {
            const loginTime = new Date(lastLogin);
            const currentTime = new Date();
            const timeDiff = currentTime - loginTime;
            
            // If session is still valid (less than 12 hours), redirect to dashboard
            if (timeDiff < (12 * 60 * 60 * 1000)) {
                const sessionObj = JSON.parse(session);
                const { data: { user }, error } = await supabase.auth.getUser(sessionObj.access_token);
                
                if (user && !error) {
                    console.log('‚úÖ Existing valid session found, redirecting to dashboard');
                    window.location.replace('/dashboard');
                    return;
                }
            }
        }
    } catch (error) {
        console.log('No valid existing session');
        // Continue with normal login page
    }
